// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  photo    String?
  password String
  role     String
  musics   Music[]

  @@map("users")
}

model Artist {
  id      Int     @id @default(autoincrement())
  name    String
  photo   String?
  streams Int
  musics  Music[]

  @@map("artists")
}

model Music {
  id       Int    @id @default(autoincrement())
  name     String
  genre    String
  album    String
  artist   Artist @relation(fields: [artistId], references: [id])
  artistId Int
  users    User[]

  @@map("musics")
}
